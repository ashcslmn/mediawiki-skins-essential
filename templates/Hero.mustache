<div x-data='{ title: "{{title}}" }' class="relative text-white aspect-w-16 aspect-h-10 md:h-auto md:aspect-h-10 lg:aspect-none" :class="{'h-24': title != 'Main Page', 'h-screen': title == 'Main Page'}">
    {{#data-logos}}
        {{#banneressential}}
            <img alt="pinkpedia" 
                class="absolute inset-0 object-cover w-full h-full" style="z-index: -1"
                src="{{.}}"
            >
        {{/banneressential}}
    {{/data-logos}}				
    <span class="absolute inset-0 opacity-70 bg-pink-leni" style="z-index: -1"></span>
    <div class="container flex px-2 py-16 mx-auto max-w-7xl md:py-8 md:px-0">
        {{! mx-auto my-4 text-center md:flex-col-reverse md:flex-col md:my-4 lg:my-16 gap-y-2 md:gap-y-4 }}
        <div class="flex flex-col mt-4 md:mt-0 gap-y-1 md:gap-x-2 md:flex-row md:py-4">
            <div class="flex flex-col gap-y-2">
                {{#data-search-box}}
                    <form action="{{form-action}}" role="search" class="flex flex-row justify-center mw-portlet md:w-80" id="p-search">
                        <input type="hidden" name="title" value="{{page-title}}">
                        {{{html-input}}}
                        {{{html-button-search}}}
                    </form>
                {{/data-search-box}}
     
                <div class="flex flex-row flex-wrap justify-center gap-1 md:justify-start md:gap-2" x-data="{ keywords: [
                    { keyword: 'Olympinks', href: '/index.php?title=Special:Search&search=Olympinks&go=Go' },
                    { keyword: 'Fact Checks', href: '/wiki/Category:Fact Checking' },
                    { keyword: 'Kakampink Stories', href: '/index.php?title=Special:Search&search=Kakampink Stories&go=Go' },
                    { keyword: 'Endorsement', href: '/index.php?title=Special:Search&search=Endorsement&go=Go' },
                    { keyword: 'Accomplishments', href: '/index.php?title=Special:Search&search=Accomplishments&go=Go' },
                    { keyword: 'Kiko Pangilinan', href: '/wiki/Category:Kiko Pangilinan' },
                    ]}">
                        <template x-for="item in keywords" >
                            <a x-bind:href="item.href"
                                class="px-1 bg-white border rounded-sm shadow md:px-2 md:py-1 text-stone-900">
                                <span class="text-xs font-semibold font-black text-pink-700 md:text-sm" x-text="item.keyword"></span>
                            </a>
                        </template>
                </div>
               
            </div>
            <template x-if="title == 'Main Page'">
                <div class="md:p-2">
                    <h3 class="py-1 my-2 text-xl font-extrabold tex1t-base md:py-2 md:m-0"> <span class="p-2 font-bold text-white bg-pink-700 rounded-full">10</span> Recent Articles </h3>
                    <ul class="grid grid-cols-1 gap-y-1 md:grid md:grid-cols-2" x-data="GetRecentChanges()">    
                        <template x-for="page in data">
                            <li class="flex flex-row items-start">
                                <a :href="`/wiki/${page.title}`" x-text="page.title" class="float-left px-2 font-bold text-left truncate2 tracking-narrow line-clamp-1"></a>
                            </li>
                        </template>
                    </ul>
                </div>
            </template>
        </div>
    </div>
</div>