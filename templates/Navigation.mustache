<div
    x-data="{ open: false }"
    aria-labelledby="primary"
    class="fixed top-0 z-40 bg-white bg-opacity-90"
    style="backdrop-filter: saturate(100%) blur(5px);"
    >
    <div class="flex flex-col w-screen" :class="{ 'h-screen': open }">
        <!-- Navbar -->
        <div class="flex justify-between p-4 max-h-16 md:px-12 md:flex-row md:max-h-18">                     
            {{>Logo}}
        
            <div class="flex items-center justify-end w-3/12 md:justify-start">
                <span class="cursor-pointer">
                    <!-- Menu icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 md:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"  x-show="!open" @click="open = true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <!-- X icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" 
                        class="hidden w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" x-show="open" @click="open = false"
                        :class="{ hidden: !open }"
                    >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </span>
            </div>
            
            <div class="items-center justify-end hidden md:flex">
                {{#links}}
                        <ul class="flex-row items-center hidden mr-4 md:flex gap-x-6">  
                            {{#top}}
                                <li>
                                    <a href="{{href}}" class="font-bold font-black tracking-tighter text-center underline uppercase text-black-leni md:no-underline hover:underline hover:text-blue-leni">{{title}}</a>
                                </li>
                            {{/top}}
                        </ul>
                    {{/links}}
                 <div x-data="{ open: false }" class="relative">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 cursor-pointer" @click="open=!open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <div class="absolute right-0 hidden w-32 p-2 mt-5 bg-gray-100" x-show="open" x-transition :class="{ hidden: !open }"> 
                        <ul class="flex flex-col">
                                {{#islogin}}
                                    <li class="p-2 cursor-pointer hover:bg-pink-leni hover:text-white">
                                        <a href="/wiki/Pinkpedia:Create_Page" data-mw="interface" title="Create Page">
                                            Create Page
                                        </a>
                                    </li>
                                    <li class="p-2 cursor-pointer hover:bg-pink-leni hover:text-white">
                                        <a href="/wiki/Special:CreateAccount" data-mw="interface" title="Create Acccount">
                                            Create User
                                        </a>
                                    </li>
                                    <li class="p-2 cursor-pointer hover:bg-pink-leni hover:text-white">
                                        <a href="/wiki/Special:Moderation" data-mw="interface" title="Special Moderation">
                                            Moderation
                                        </a>
                                    </li>
                                {{/islogin}}
                                <li class="p-2 cursor-pointer hover:bg-pink-leni hover:text-white">
                                    {{#islogin}}
                                        <a  href="/wiki/Special:UserLogout" data-mw="interface" title="Log out">
                                            Logout
                                        </a>
                                    {{/islogin}}
                                    {{^islogin}}
                                        <a  href="/wiki/Special:Login" data-mw="interface" title="Log in">
                                            Login
                                        </a>
                                    {{/islogin}}
                                </li>
                            </ul>
                    </div>
                 </div>
            </div>
        </div>

        <div
            x-show="open"
            x-cloak
            x-transition:enter="transition duration-200 transform ease-out"
            x-transition:enter-start="scale-75"
            x-transition:leave="transition duration-100 transform ease-in"
            x-transition:leave-end="opacity-0 scale-90"
            class="flex flex-col items-center justify-center hidden h-full text-pink-leni"
            :class="{ hidden: !open }"
        >
            
            {{#links}}
                <ul>  
                    {{#top}}
                        <li class="mb-2 text-center md:mb-3">
                            <a href="{{href}}" class="text-4xl font-black tracking-tighter uppercase transition-all md:text-5xl hover:text-6xl hover:text-blue-leni">{{title}}</a>
                        </li>
                    {{/top}}
                </ul>
            {{/links}}
                
        </div>
    </div>
</div>